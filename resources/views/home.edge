<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Finance App - Modern Dashboard
    </title>
    <link rel="stylesheet" href="/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <section id="login-section">
      <div class="container">
        <div class="card login-card">
          <h1>
            ğŸ’° Finance App
          </h1>
          <form id="login-form">
            <div class="form-group">
              <label for="email">ğŸ“§ Email</label>
              <input type="email" id="email" placeholder="your@email.com" required />
            </div>
            <div class="form-group">
              <label for="password">ğŸ”’ Password</label>
              <input type="password" id="password" placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" required />
            </div>
            <button type="submit" class="btn primary">Login</button>
          </form>
          <p id="login-error" class="error-text">
          </p>
        </div>
      </div>
    </section>

    <section id="dashboard" class="hidden">
      <div class="container">
        <header>
          <h1>
            ğŸ’° Dashboard Keuangan
          </h1>
          <button id="logout-btn" class="btn danger">ğŸšª Logout</button>
        </header>

        <section class="card">
          <h2>
            â• Tambah Transaksi Baru
          </h2>
          <form id="add-transaction-form" class="transaction-form">
            <div class="form-group">
              <label for="description">ğŸ“ Deskripsi</label>
              <input type="text" id="description" placeholder="Contoh: Gaji bulanan" required />
            </div>
            <div class="form-group">
              <label for="type">ğŸ“Š Tipe</label>
              <select id="type" required>
                <option value="income">
                  ğŸ’° Pemasukan
                </option>
                <option value="expense">
                  ğŸ’¸ Pengeluaran
                </option>
              </select>
            </div>
            <div class="form-group">
              <label for="amount">ğŸ’µ Jumlah</label>
              <input type="number" id="amount" step="0.01" placeholder="0.00" required />
            </div>
            <button type="submit" class="btn primary">âœ¨ Tambah Transaksi</button>
          </form>
        </section>

        <section class="card">
          <h2>
            ğŸ“‹ Daftar Transaksi
          </h2>
          <table id="transactions-table">
            <thead>
              <tr>
                <th>
                  ğŸ“ Deskripsi
                </th>
                <th>
                  ğŸ“Š Tipe
                </th>
                <th>
                  ğŸ’µ Jumlah
                </th>
                <th>
                  âš™ï¸ Aksi
                </th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </section>

        <section class="card">
          <h2>
            ğŸ“ˆ Stock Market Tracker
          </h2>
          <div class="stock-tracker-container">
            <div class="stock-search-section">
              <form id="stock-search-form">
                <div class="search-grid">
                  <div class="form-group">
                    <label for="stock-search-input">Cari Saham:</label>
                    <input
                      type="text"
                      id="stock-search-input"
                      placeholder="Contoh: Apple, AAPL, Microsoft..."
                      required
                    />
                  </div>
                  <div class="form-group">
                    <button type="submit" class="btn primary">Cari</button>
                  </div>
                </div>
              </form>

              <div id="search-results" class="search-results hidden"></div>
            </div>

            <div class="stock-quote-section">
              <h3>Quick Quote</h3>
              <form id="quick-quote-form">
                <div class="quick-quote-grid">
                  <input
                    type="text"
                    id="quick-symbol-input"
                    placeholder="Symbol (e.g., AAPL, MSFT, GOOGL)"
                    required
                  />
                  <button type="submit" class="btn primary">Get Quote</button>
                </div>
              </form>

              <div id="stock-quote-result" class="stock-quote-result hidden"></div>
            </div>

            <div class="popular-stocks-section">
              <h3>Popular Stocks</h3>
              <div class="popular-stocks-grid">
                <button class="stock-chip" data-symbol="AAPL">ğŸ Apple</button>
                <button class="stock-chip" data-symbol="MSFT">ğŸ’» Microsoft</button>
                <button class="stock-chip" data-symbol="GOOGL">ğŸ” Google</button>
                <button class="stock-chip" data-symbol="AMZN">ğŸ“¦ Amazon</button>
                <button class="stock-chip" data-symbol="TSLA">ğŸš— Tesla</button>
                <button class="stock-chip" data-symbol="META">ğŸ“˜ Meta</button>
              </div>
            </div>
          </div>
        </section>

        <section class="card">
          <h2>
            ğŸ’± Konversi Mata Uang
          </h2>
          <div class="exchange-rate-container">
            <form id="currency-converter-form">
              <div class="converter-grid">
                <div class="form-group">
                  <label for="from-currency">Dari:</label>
                  <select id="from-currency" required>
                    <option value="USD">USD - United States Dollar</option>
                    <option value="IDR">IDR - Indonesian Rupiah</option>
                    <option value="EUR">EUR - Euro</option>
                    <option value="GBP">GBP - British Pound</option>
                    <option value="JPY">JPY - Japanese Yen</option>
                    <option value="SGD">SGD - Singapore Dollar</option>
                    <option value="MYR">MYR - Malaysian Ringgit</option>
                    <option value="AUD">AUD - Australian Dollar</option>
                    <option value="CNY">CNY - Chinese Yuan</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="to-currency">Ke:</label>
                  <select id="to-currency" required>
                    <option value="IDR">IDR - Indonesian Rupiah</option>
                    <option value="USD">USD - United States Dollar</option>
                    <option value="EUR">EUR - Euro</option>
                    <option value="GBP">GBP - British Pound</option>
                    <option value="JPY">JPY - Japanese Yen</option>
                    <option value="SGD">SGD - Singapore Dollar</option>
                    <option value="MYR">MYR - Malaysian Ringgit</option>
                    <option value="AUD">AUD - Australian Dollar</option>
                    <option value="CNY">CNY - Chinese Yuan</option>
                  </select>
                </div>

                <div class="form-group">
                  <label for="convert-amount">Jumlah:</label>
                  <input type="number" id="convert-amount" step="0.01" min="0" required />
                </div>

                <div class="form-group">
                  <button type="submit" class="btn primary">Konversi</button>
                </div>
              </div>
            </form>

            <div id="conversion-result" class="conversion-result hidden">
              <div class="result-card">
                <div class="result-header">
                  <span class="result-label">Hasil Konversi</span>
                </div>
                <div class="result-body">
                  <div class="result-amount">
                    <span id="result-from-amount"></span>
                    <span class="arrow">â†’</span>
                    <span id="result-to-amount" class="highlight"></span>
                  </div>
                  <div class="result-rate">
                    Rate: <span id="result-rate"></span>
                  </div>
                  <div class="result-update">
                    <small id="result-last-update"></small>
                  </div>
                </div>
              </div>
            </div>

            <div class="exchange-actions">
              <button id="view-rates-btn" class="btn secondary">Lihat Semua Rate</button>
            </div>
          </div>
        </section>
      </div>
    </section>

    <div id="update-modal" class="modal hidden">
      <div class="modal-content">
        <h2>
          Edit Transaksi
        </h2>
        <form id="update-transaction-form">
          <input type="hidden" id="update-id" />

          <div class="form-group">
            <label for="update-description">Deskripsi:</label>
            <input type="text" id="update-description" required />
          </div>

          <div class="form-group">
            <label for="update-type">Tipe:</label>
            <select id="update-type" required>
              <option value="income">
                Pemasukan
              </option>
              <option value="expense">
                Pengeluaran
              </option>
            </select>
          </div>

          <div class="form-group">
            <label for="update-amount">Jumlah:</label>
            <input type="number" id="update-amount" step="0.01" required />
          </div>

          <div class="form-buttons">
            <button type="submit" class="btn primary">Update</button>
            <button type="button" id="cancel-update" class="btn secondary">Batal</button>
          </div>
        </form>
      </div>
    </div>

    <div id="rates-modal" class="modal hidden">
      <div class="modal-content rates-modal-content">
        <div class="modal-header">
          <h2>ğŸ“Š Exchange Rates</h2>
          <button id="close-rates-modal" class="btn-close">Ã—</button>
        </div>
        <div class="rates-controls">
          <label for="base-currency-select">Base Currency:</label>
          <select id="base-currency-select">
            <option value="USD">USD - United States Dollar</option>
            <option value="IDR">IDR - Indonesian Rupiah</option>
            <option value="EUR">EUR - Euro</option>
            <option value="GBP">GBP - British Pound</option>
            <option value="JPY">JPY - Japanese Yen</option>
          </select>
          <button id="load-rates-btn" class="btn primary">Load Rates</button>
        </div>
        <div id="rates-content" class="rates-content">
          <p class="text-center">Pilih base currency dan klik Load Rates</p>
        </div>
      </div>
    </div>

    <div id="stock-detail-modal" class="modal hidden">
      <div class="modal-content stock-modal-content">
        <div class="modal-header">
          <h2>ğŸ“Š Stock Details</h2>
          <button id="close-stock-modal" class="btn-close">Ã—</button>
        </div>
        <div id="stock-detail-content" class="stock-detail-content"></div>
      </div>
    </div>

    <script src="/script.js"></script>
  </body>
</html>
