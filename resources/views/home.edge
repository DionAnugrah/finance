<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      Finance App
    </title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <section id="login-section">
      <div class="container">
        <h1>
          Login
        </h1>
        <form id="login-form">
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" required />
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" required />
          </div>
          <button type="submit" class="btn primary">Login</button>
        </form>
        <p id="login-error" class="error">
        </p>
      </div>
    </section>

    <section id="dashboard" class="hidden">
      <div class="container">
        <header>
          <h1>
            Dashboard Keuangan
          </h1>
          <button id="logout-btn" class="btn danger">Logout</button>
        </header>

        <section class="card">
          <h2>
            Tambah Transaksi Baru
          </h2>
          <form id="add-transaction-form">
            <div class="form-group">
              <label for="description">Deskripsi:</label>
              <input type="text" id="description" required />
            </div>
            <div class="form-group">
              <label for="type">Tipe:</label>
              <select id="type" required>
                <option value="income">
                  Pemasukan
                </option>
                <option value="expense">
                  Pengeluaran
                </option>
              </select>
            </div>
            <div class="form-group">
              <label for="amount">Jumlah:</label>
              <input type="number" id="amount" step="0.01" required />
            </div>
            <button type="submit" class="btn primary">Tambah Transaksi</button>
          </form>
        </section>

        <section class="card">
          <h2>
            Daftar Transaksi
          </h2>
          <table id="transactions-table">
            <thead>
              <tr>
                <th>
                  Deskripsi
                </th>
                <th>
                  Tipe
                </th>
                <th>
                  Jumlah
                </th>
                <th>
                  Aksi
                </th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </section>
      </div>
    </section>

    <div id="update-modal" class="modal hidden">
      <div class="modal-content">
        <h2>
          Edit Transaksi
        </h2>
        <form id="update-transaction-form">
          <input type="hidden" id="update-id" />

          <div class="form-group">
            <label for="update-description">Deskripsi:</label>
            <input type="text" id="update-description" required />
          </div>

          <div class="form-group">
            <label for="update-type">Tipe:</label>
            <select id="update-type" required>
              <option value="income">
                Pemasukan
              </option>
              <option value="expense">
                Pengeluaran
              </option>
            </select>
          </div>

          <div class="form-group">
            <label for="update-amount">Jumlah:</label>
            <input type="number" id="update-amount" step="0.01" required />
          </div>

          <div class="form-buttons">
            <button type="submit" class="btn primary">Update</button>
            <button type="button" id="cancel-update" class="btn secondary">Batal</button>
          </div>
        </form>
      </div>
    </div>

    <script src="/script.js"></script>
  </body>
</html>
